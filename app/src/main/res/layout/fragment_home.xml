<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/circle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
         android:layout_centerHorizontal="true"
        android:text="Color Score"
        android:textColor="@color/white"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
         />


    <Button
        android:id="@+id/legend"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/shape_drawable"
        android:clickable="false"
        android:textColor="@color/white"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/textLegend"
        android:layout_width="wrap_content"
        android:layout_marginTop="255dp"
        android:text="high risk, you have to act"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/legend1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/shape_drawable1"
        android:clickable="false"
        android:textColor="@color/white"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/textLegend1"
        android:layout_width="wrap_content"
        android:layout_marginTop="295dp"
        android:text="medium risk, start improve now!"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/legend2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/shape_drawable2"
        android:clickable="false"
        android:textColor="@color/white"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/textLegend2"
        android:layout_width="wrap_content"
        android:layout_marginTop="335dp"
        android:text="moderate risk, improve yourself!"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/legend3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="370dp"
        android:background="@drawable/shape_drawable3"
        android:clickable="false"
        android:textColor="@color/white"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/textLegend3"
        android:layout_width="wrap_content"
        android:layout_marginTop="375dp"
        android:text="good result, don't give up"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/legend4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/shape_drawable4"
        android:clickable="false"
        android:textColor="@color/white"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/textLegend4"
        android:layout_width="wrap_content"
        android:layout_marginTop="415dp"
        android:text="Congratulations, keep this way!"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/legend5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/shape_drawable5"
        android:clickable="false"
        android:textColor="@color/white"
        android:padding="12dp"/>
    <TextView
        android:id="@+id/textLegend5"
        android:layout_width="wrap_content"
        android:layout_marginTop="455dp"
        android:text="maximum risk, talk with a doctor"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
        />


</RelativeLayout>